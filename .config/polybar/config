[settings]

[bar/top1]
monitor=${env:MONITOR:eDP1}
top = true
override-redirect = false
width = 100%
height = 35
background = #3D3C3C
foreground = #F0F0F0

spacing = 0
underline-size = 3
overline-size = 3
separator = |
separator-foreground = #0055FF
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1

font-0 = Inconsolata:size=14
font-1 = MaterialDesignIcons:size=16

modules-left  = bspwm
modules-center = 
modules-right = updates backlight volume wlan battery time powermenu

tray-position = center
tray-detached = true
tray-maxsize = 16
tray-transparent = false

wm-restack = bspwm

[module/bspwm]
type = internal/bspwm

; workspace_icon-[0-9]+ = label;icon
  ws-icon-0 = 1;
  ws-icon-1 = 2;
  ws-icon-2 = 3;
  ws-icon-3 = 4;
  ws-icon-4 = 5;
  ws-icon-5 = 6;
  ws-icon-6 = 7;
  ws-icon-7 = 8;

 format = <label-state> <label-mode>

 ; If any values for label-dimmed-N area defined, the workspace/mode colors will get overridden
 ; with those values if the monitor is out of focus

 ; Active desktop
 label-focused = %name%.%icon% 
 label-focused-foreground = #FFFFFF
 label-focused-underline = #57FA70
 label-focused-padding = 1

 ; Occupied desktop
 label-occupied = %name%.%icon% 
 label-occupied-foreground = #9A8ADB
 label-occupied-padding = 1

 ; Urgent desktop
 label-urgent = %name%.%icon% 
 label-urgent-background = #F6F9FF
 label-urgent-padding = 1

 ; Empty desktop
 label-empty = %name%.%icon% 
 label-empty-foreground = #b7672d
 label-empty-padding = 1


