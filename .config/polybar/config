[module/bspwm2]
type = internal/bspwm

; workspace_icon-[0-9]+ = label;icon
  ws-icon-0 = 1;
  ws-icon-1 = 2;
  ws-icon-2 = 3;
  ws-icon-3 = 4;
  ws-icon-4 = 5;
  ws-icon-5 = 6;
  ws-icon-6 = 7;
  ws-icon-7 = 8;

; Available tags:
 ;   <label-state> (default) - gets replaced with <label-(active|urgent|occupied|empty)>
 ;   <label-mode> - gets replaced with <label-(monocle|tiled|fullscreen|floating|locked|sticky|private)>
 format = <label-state> <label-mode>

 ; If any values for label-dimmed-N area defined, the workspace/mode colors will get overridden
 ; with those values if the monitor is out of focus

 ; Available tokens:
 ;   %name%
 ;   %icon%
 ;   %index%
 ; Default: %icon% %name%
 label-focused = %icon% %name%
 label-focused-foreground = #4A5466
 label-focused-underline = #5E6B81
 label-focused-padding = 1

 ; Available tokens:
 ;   %name%
 ;   %icon%
 ;   %index%
 ; Default: %icon%
 label-occupied = %icon% %name%
 label-occupied-foreground = #4A5466
 label-occupied-padding = 1

 ; Available tokens:
 ;   %name%
 ;   %icon%
 ;   %index%
 ; Default: %icon%
 label-urgent = %icon% %name%
 label-urgent-background = #F6F9FF
 label-urgent-padding = 1

 ; Available tokens:
 ;   %name%
 ;   %icon%
 ;   %index%
 ; Default: %icon% 
 label-empty = %icon% %name%
 label-empty-foreground = #b7672d
 label-empty-padding = 1

