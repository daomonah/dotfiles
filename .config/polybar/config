[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <ramp-signal>  <label-connected>

label-connected = %essid%
label-disconnected =  %ifname%
label-disconnected-foreground = #55

ramp-signal-0 = 
ramp-signal-foreground = #82D2ED

[module/updates]
type = custom/script
exec = python3 ~/.config/scripts/num.py
interval = 1000

[module/time]
type = internal/date
date = %H:%M %p %a %d 
interval = 60

[module/volume]
type = internal/volume
label-volume =  %percentage%
label-muted =  muted



[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full_at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC0

; Seconds between reading battery capacity.
; If set to 0, polling will be disabled.
;poll_interval = 3

; Available tags:
;   <label-charging> (default)
;   <bar-capaity>
;   <ramp-capacity>
;   <animation-charging>
format-charging = <animation-charging> <label-charging>


; Available tags:
;   <label-discharging> (default)
;   <bar-capaity>
;   <ramp-capacity>
format-discharging = <ramp-capacity>  <label-discharging>


; Available tags:
;   <label-full> (default)
;   <bar-capaity>
;   <ramp-capacity>
format-full = <label-full>

; Available tokens:
;   %percentage% (default)


; Available tokens:
;   %percentage% (default)

; Available tokens:
;   %percentage% (default)
label-full =  %percentage%

ramp-capacity-0 = 
ramp-capacity-1 =  
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate_ms = 750

